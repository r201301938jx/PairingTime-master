<% provide(:title, "管理者ログイン") %>

<div class="col-12 col-xs-12 col-sm-offset-3 col-sm-6 col-sm-offset-3">

  <h2 class="heading text-center">管理者ログイン</h2>

  <div id="error_explanation">
    <%= flash[:alert] %>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group row">
    <%= f.label :"メールアドレス", class: "col-4 col-xs-4 col-sm-3" %>
    <div class="col-8 col-xs-8 col-sm-9">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :"パスワード", class: "col-4 col-xs-4 col-sm-3" %>
    <div class="col-8 col-xs-8 col-sm-9">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-brown btn-block" %>
  </div>

  <% end %>

</div>