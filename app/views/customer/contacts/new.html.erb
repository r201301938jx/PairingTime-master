<% provide(:title, "お問い合わせ") %>

<div class="col-12 col-xs-12 col-sm-offset-2 col-sm-8 col-sm-offset-2">

  <h2 class="heading text-center">お問い合わせフォーム</h2>

  <%= form_for @contact do |f| %>
  <%= render 'layouts/errors', obj: @contact %>

  <div class="form-group row">
    <%= f.label :"氏名", class: "col-4 col-xs-4 col-sm-3" %>
    <div class="col-8 col-xs-8 col-sm-9">
      <%= f.text_field :name, placeholder: "鈴木　一郎", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :"メールアドレス", class: "col-4 col-xs-4 col-sm-3" %>
    <div class="col-8 col-xs-8 col-sm-9">
      <%= f.email_field :email, placeholder: "xxxxxxxx@xxxx.com", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :"お問い合わせ内容", class: "col-12 col-xs-12 col-sm-12" %>
    <div class="col-12 col-xs-12 col-sm-12">
      <%= f.text_area :message, placeholder: "こちらにお問い合わせ内容を記載してください", class: "form-control", rows: "15" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "お問い合わせ内容を送信", class: "btn btn-brown btn-block" %>
  </div>

  <% end %>

</div>