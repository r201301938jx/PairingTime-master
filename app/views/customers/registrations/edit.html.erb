<% provide(:title, "パスワード変更") %>

<div class="col-12 col-xs-12 col-sm-offset-2 col-sm-8 col-sm-offset-2">

  <h2 class="heading text-center">パスワード変更</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :"新しいパスワード", class: "col-5 col-xs-5 col-sm-4" %>
    <div class="col-7 col-xs-7 col-sm-8">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上で入力してください", class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :"新しいパスワードの確認", class: "col-5 col-xs-5 col-sm-4" %>
    <div class="col-7 col-xs-7 col-sm-8">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "同じパスワードを入力してください", class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :"現在のパスワード", class: "col-5 col-xs-5 col-sm-4" %>
    <div class="col-7 col-xs-7 col-sm-8">
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "既存のパスワードを入力してください" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを変更", class: "btn btn-brown btn-block" %>
  </div>
  <% end %>

  <div class="pull-right">
    <%= link_to "マイページに戻る", customer_path(resource) %>
  </div>

</div>